	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.orsys.library</groupId>
	<artifactId>inventory</artifactId>
	<version>1.0.0</version>
	<packaging>pom</packaging>
	<name>Inventaire</name>
	<description>Gestion de l'inventaire</description>
	<!-- <url>${website-root}/</url> -->
	<modules>
		<module>dao</module>
		<module>model</module>
		<module>service</module>
		<module>web</module>
	</modules>

	<properties>
		<java.version>1.8</java.version>
		<tomcat.server.url>http://localhost:8180/manager/text</tomcat.server.url>
		<tomcat.server.id>tomcat-dev-server</tomcat.server.id>
		<website-root>http://localhost:8081/repository/nm-sites</website-root>
		<project.build.sourceProperties>UTF-8</project.build.sourceProperties>
	</properties>

	<profiles>
		<profile>
			<id>default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>ci</id>
			<properties>
				<tomcat.server.url>http://tomcat:8080/manager/text</tomcat.server.url>
			</properties>
		</profile>
	</profiles>

	<dependencyManagement>
		<dependencies>
